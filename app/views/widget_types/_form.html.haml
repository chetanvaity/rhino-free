= form_for @widget_type do |f|
  - if @widget_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget_type.errors.count, "error")} prohibited this widget_type from being saved:"
      %ul
        - @widget_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :properties
    = f.text_field :properties
  .actions
    = f.submit 'Save'
