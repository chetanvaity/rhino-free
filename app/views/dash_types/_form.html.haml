= form_for @dash_type do |f|
  - if @dash_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dash_type.errors.count, "error")} prohibited this dash_type from being saved:"
      %ul
        - @dash_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :properties
    = f.text_field :properties
  .actions
    = f.submit 'Save'
